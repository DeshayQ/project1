* A program that prompts the user for their name, age and height in inches then displays the information in a sentence.
*/
import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    String name;
    int age;
    double heightInInches;
    
    Scanner scnr = new Scanner(System.in);
    
    System.out.println("Enter your name: ");
    name = scnr.nextLine();

    System.out.println("Enter your age: ");
    age = scnr.nextInt();

    System.out.println("Enter your height in inches: ");
    heightInInches = scnr.nextDouble();

    System.out.println("Hello " +name+ ". You are " +age+ " years old and " +heightInInches+ " inches tall.");

  }
